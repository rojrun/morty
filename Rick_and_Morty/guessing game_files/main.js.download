$( document ).ready(initializeApp);

var the_number = null;

function initializeApp(){
    pick_number();
    makeCards();
    $(".cards").click(function(event){
        var the_guess = $(event.currentTarget).text();
        var card = $(event.currentTarget);
        console.log("the_guess: ", the_guess, card);
        make_guess(the_guess, card);
    });
}

function pick_number(){
    var random_number = Math.floor(Math.random() * 10) + 1;
    the_number = random_number;
    console.log("random_number: ", random_number);
    return the_number;
}

function make_guess(the_guess, card){
    if (the_guess > the_number) {
        $("#response_div").text("Too High! Pick another number.");
        $(card).hide();
    } else if (the_guess < the_number) {
        $("#response_div").text("Too Low! Pick another number.");
        $(card).hide();
    } else if (the_guess == the_number) {
        $("#response_div").text("You guessed it!");
        $(card).attr("id", "#right_answer");
    }
}

function makeCards() {
    for (var cardNumber = 1; cardNumber <= 10; cardNumber++) {
        var card = $("<div>").addClass("cards").text(cardNumber);
        $("section").append(card);
    }
}